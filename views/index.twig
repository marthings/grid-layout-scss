{# index.twig #}
{% extends "ui.twig" %}

{% block body %}
  <header>
    <h1>Css grid layout</h1>
  </header>
  
  <h2>Grid with parent class</h2>
  <div class="grid-layout-3">
    <div class="grid-random-item">
      Grid cell 1
    </div>
    <div class="grid-random-item">
      Grid cell 2
    </div>
    <div class="grid-random-item">
      Grid cell 3
    </div>
  </div>
  
  <h2>Grid with child classes</h2>
  <div class="grid-layout">
    <div class="grid-cell-4">
      Spans 4 cells
    </div>
    <div class="grid-cell-4">
      Spans 4 cells
    </div>
    <div class="grid-cell-4">
      Spans 4 cells
    </div>
  </div>

{% endblock %}
